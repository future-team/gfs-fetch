{
  "compilerOptions": {
    "outDir": "./lib/",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "target": "es3",
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules"
  ]
}